{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/index.html", // Source for the static build
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" // This means "dist" relative to `client/`, so it expects client/dist
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1" // Ensure this serves from client/dist
    }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build"
}